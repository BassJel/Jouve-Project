<schema name="filenet" version="1.1">   <fields> 
    <field name="DateLastModified" type="date" faceted="false" indexed="true" stored="true"/>
    <field name="DateCreated" type="date" faceted="false" indexed="true" stored="true"/>
    <field name="id" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="DocumentTitle" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="StorageLocation" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="MinorVersionNumber" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="Name" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="text" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="ContentSize" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="ClassificationStatus" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="CurrentState" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="MimeType" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="MajorVersionNumber" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="LastModifier" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="IsReserved" type="boolean" faceted="false" indexed="true" stored="true"/>
    <field name="LockToken" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="LockTimeout" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="Owner" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="VersionStatus" type="string" faceted="false" indexed="true" stored="true"/>
    <field name="IsFrozenVersion" type="boolean" faceted="false" indexed="true" stored="true"/>
    <field name="IsCurrentVersion" type="boolean" faceted="false" indexed="true" stored="true"/>
  </fields>  
  <uniqueKey>id</uniqueKey>
  <defaultSearchField>text</defaultSearchField>
</schema>
